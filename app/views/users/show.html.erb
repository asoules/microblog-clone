<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Name:</b>
  <%=h @user.name %>
</p>

<p>
  <b>Bio:</b>
  <%=h @user.bio %>
</p>

<div class="tweets">
  <%= render :partial => 'users/show/tweet', :collection => @user.tweets %>
</div>

<% form_for @subscription do |f| %>

  <%= f.hidden_field :following_id, :value => @user.id %>
  <%= f.submit 'Follow' %>

<% end %>


















